// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./app-doacao.sqlite"
}

model Estado {
  id         Int      @id @default(autoincrement())
  nome       String
  sigla      String
  created_at DateTime @default(now())

  cidade Cidade[]

  @@map("estados")
}

model Cidade {
  id        Int    @id @default(autoincrement())
  nome      String
  estado_id Int

  estado Estado @relation(fields: [estado_id], references: [id])

  pessoas Pessoa[]
  locais Local[]

  created_at DateTime @default(now())

  @@map("cidades")

}

model Pessoa {
  id        Int    @id @default(autoincrement())
  nome      String
  cidade_id Int

  cidade Cidade @relation(fields: [cidade_id], references: [id])

  doacoes Doacao[]

  @@map("pessoas")
}

model Local {
  id        Int    @id @default(autoincrement())
  nome      String
  cidade_id Int

  doacoes Doacao[]

  cidade Cidade @relation(fields: [cidade_id], references: [id])

  @@map("locais_coleta")
}

model Doacao {

  id        Int    @id @default(autoincrement())
  pessoa_id Int
  local_id Int

  pessoa Pessoa @relation(fields: [pessoa_id], references: [id])

  local Local @relation(fields: [local_id], references: [id])

}

model User {

  id  Int @id @default(autoincrement())
  nome  String
  email String  @unique
  password  String
  created_at  DateTime @default(now())

  @@map("users")

}